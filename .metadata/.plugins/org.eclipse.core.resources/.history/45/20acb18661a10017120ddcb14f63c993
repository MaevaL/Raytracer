package models;

import java.util.ArrayList;
import java.util.List;

public class Scene {

	private List<Sphere> spheres = new ArrayList<Sphere>();
	
	public Scene() {}
	
	public void addSphere(Sphere sphere) {
		spheres.add(sphere);
	}
	
	public List<Vec3> getSpheres() {
		return spheres;
	}
	
	
}
