		//CAS EXEMPLE
		Vector<Vec3> image = new Vector<Vec3>(1024*1024);
		Vec3 oCamera = new Vec3(0,0,0);
		double fov = Math.PI/3;
		Vec3 oSphere = new Vec3(0,0,5);
		Vec3 color = new Vec3(0,0,0);
		Vec3 colorS = new Vec3(255,0,0);
		Sphere sphere = new Sphere(oSphere, colorS, 20, false);
		Vector<Vec3> pixels = new Vector<Vec3>(1024*1024);
		
		for(int i = 0; i < 1024*1024; i++) {
			pixels.add(i, color);
			image.add(i, color);
		}
		
		image = TracingUtils.raytracer(1024, 1024, fov, sphere, pixels);
		
		Utils.save_img(image, 1024, 1024, "testExemple");
